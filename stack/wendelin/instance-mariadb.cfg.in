  #!{{ bash }}
  set -euo pipefail
  filepath="${directory:mariadb-dump-full}/"${dated-filename:command}.sql.gz
  "${binary-wrap-mysqldump:wrapper-path}" --all-databases --flush-privileges --single-transaction --max-allowed-packet=128M {% if incremental_backup['enable'] %}--flush-logs --master-data=2 {% endif %}| {{ parameter_dict['gzip-location'] }}/bin/gzip > $filepath
  ln -sf "$filepath" "${directory:mariadb-dump-full}/${:most-recent}"

