{
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Input Parameters",
  "properties": {
    "cell1": {
      "title": "First Cell",
      "description": "Radio parameters of the first cell of ORS Duo (Please check connection parameters to see which band it corresponds to)",
      "$ref": "#/$defs/ors_duo_cell"
    },
    "cell2": {
      "title": "Second Cell",
      "description": "Radio parameters of the second cell of ORS Duo (Please check connection parameters to see which band it corresponds to)",
      "$ref": "#/$defs/ors_duo_cell"
    },
    "nodeb": {
      "title": "eNB Parameters",
      "description": "Parameters not related to a single cell but to the eNB",
      "allOf": [
        {
          "$ref": "ors-enb-gnb-duo.json"
        },
        {
          "$ref": "ors-enb-gnb.json"
        },
        {
          "$ref": "ors-enb.json"
        },
        {
          "$ref": "ors-gnb.json"
        }
      ],
      "type": "object",
      "default": {}
    },
    "management": {
      "title": "ORS Management Parameters",
      "description": "Parameters which are not related to radio, such as promise thresholds, statistical collection, log verbosity etc...",
      "allOf": [
        {
          "$ref": "ors-params.json"
        }
      ],
      "type": "object",
      "default": {}
    },
    "monitor-interface-url": {
      "$ref": "instance-ors-gnb-input-schema.json#/properties/monitor-interface-url"
    }
  },
  "$defs": {
    "ors_duo_cell": {
      "required": [
        "cell_type"
      ],
      "oneOf": [
        {
          "title": "gNB Cell",
          "required": [
            "cell_type"
          ],
          "allOf": [
            {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "title": "Cell Type",
              "type": "object",
              "properties": {
                "cell_type": {
                  "title": "Cell Type: you must select this parameter to enable the cell",
                  "type": "string",
                  "const": "gNB"
                }
              }
            },
            {
              "$ref": "ors-cell.json"
            },
            {
              "$ref": "ors-gnb-cell.json"
            }
          ],
          "type": "object"
        },
        {
          "title": "eNB Cell",
          "required": [
            "cell_type"
          ],
          "allOf": [
            {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "title": "Cell Type",
              "type": "object",
              "properties": {
                "cell_type": {
                  "title": "Cell Type: you must select this parameter to enable the cell",
                  "type": "string",
                  "const": "eNB"
                }
              }
            },
            {
              "$ref": "ors-cell.json"
            },
            {
              "$ref": "ors-enb-cell.json"
            }
          ],
          "type": "object"
        }
      ],
      "type": "object",
      "default": {}
    }
  }
}
