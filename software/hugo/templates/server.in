#! {{ param_hugo['path_shell'] }}
. {{ go_environment }}
cd {{ data }}
if [ {{ site }} ]; then
  cd {{ site }}
  if [ -d "public" ]; then rm -Rf public; fi
  hugo && hugo server --bind={{ ip }} --port={{ port }} --baseURL={{ base_url }} --appendPort=false
else
  hugo server --bind={{ ip }} --port={{ port }}
fi
