{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "client.crt": {
      "type": "string",
      "pattern": "^Certificate:.+\\n-----END CERTIFICATE-----\\n$"
    },
    "client.key": {
      "type": "string",
      "pattern": "^-----BEGIN PRIVATE KEY-----.+\\n-----END PRIVATE KEY-----\\n$"
    },
    "master-url": {
      "type": "string",
      "format": "uri"
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "md5sum": {
            "type": "string",
            "pattern": "^[a-f0-9]{32}$"
          }
        },
        "required": ["url", "md5sum"],
        "additionalProperties": false
      }
    }
  },
  "required": ["client.crt", "client.key", "master-url", "tests"],
  "additionalProperties": false
}
