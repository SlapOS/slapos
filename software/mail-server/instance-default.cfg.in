  snappymail-conf
  snappymail-domain
  password-php
  postfix-conf-master
  postfix-service
  postfix-symlinks-libexec
  monitor-base
  publish-connection-information
  certificate-authority
  dovecot-promise
  dovecot-service
  postfix-promise
  apache-httpd-promise
  php.ini-conf
  lamp-apache-httpd
  apache-php-service
{% for part in part_list -%}
{{ '    %s' % part }}
{% endfor -%}

eggs-directory = {{ eggs_directory }}
develop-eggs-directory = {{ develop_eggs_directory }}
offline= true


