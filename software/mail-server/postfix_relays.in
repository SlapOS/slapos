{% for domain in mail_domains.split(",") -%}
{% if relay_info['host-' + domain] != "" and relay_info['port-' + domain] != "" -%}
@{{ domain }} smtp:[{{ relay_info['host-' + domain] }}]:{{ relay_info['port-' + domain] }}
{% else -%}
@{{ domain }} smtp:[{{ relay_info['host-default'] }}]:{{ relay_info['port-default'] }}
{% endif -%}
{% endfor -%}