{
  "title": "SDR transiever",
  "description": "Radio Unit constituted several SDR boards",
  "type": "object",
  "required": [
    "ru_type",
    "ru_link_type",
    "rf_port"
  ],

  "properties": {
    "ru_type": {
      "const":    "sdr",
      "template": "sdr",
      "options":  { "hidden": true }
    },
    "ru_link_type": {
      "const":    "sdr",
      "template": "sdr",
      "options":  { "hidden": true }
    },

    "sdr_dev_list": {
      "title": "SDR boards",
      "description": "Which SDR boards to use as combined RF port",
      "type": "array",
      "items": {
        "title": "/dev/sdr #",
        "type": "number"
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "$ref": "../common-input-schema.json"
  }
}
