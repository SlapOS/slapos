{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "Radio Unit",
  "type": "object",
  "oneOf": [
    { "$ref": "sdr/input-schema.json" },
    { "$ref": "lopcomm/input-schema.json" },
    { "$ref": "sunvawe/input-schema.json" }
  ],

  "$defs": {
    "ru-common": {
      "required": [
        "ru_type",
        "ru_link_type",
        "n_antenna_dl",
        "n_antenna_ul"
      ],

      "properties": {
        "ru_type": {
          "type": "string",
          "options":  { "hidden": true }
        },
        "ru_link_type": {
          "type": "string",
          "options":  { "hidden": true }
        },

        "n_antenna_dl": {
          "title": "Number of DL antennas",
          "type": "integer"
        },

        "n_antenna_ul": {
          "title": "Number of UL antennas",
          "type": "integer"
        }
      }
    }
  }
}
