{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sunwave M2RU",
  "type": "object",
  "required": [
    "sunwave"
  ],
  "additionalProperties": false,
  "properties": {
    "sunwave": {
      "title": "Sunwave M2RU",
      "type": "object",
      "required": [
        "cpri"
      ],
      "additionalProperties": false,
      "properties": {
        "cpri": {
          "title": "CPRI Link Type",
          "type": "object",
          "required": [
            "n_antenna_dl",
            "n_antenna_ul",
            "tx_gain",
            "rx_gain",
            "cpri_link",
            "mac_addr"
          ],
          "properties": {
            "$ref": "../../ru/common.json#/properties",
            "n_antenna_dl": {
              "$ref": "#/properties/n_antenna_dl",
              "default": 2
            },
            "n_antenna_ul": {
              "$ref": "#/properties/n_antenna_ul",
              "default": 1
            },
            "cpri_link": {
              "$ref": "#/properties/cpri_link",
              "properties": {
                "$ref": "#/properties/cpri_link/properties",
                "mapping": {
                  "$ref": "#/properties/cpri_link/properties/mapping",
                  "const": "bf1",
                  "enum": [
                    "bf1"
                  ]
                },
                "rx_delay": {
                  "$ref": "#/properties/cpri_link/properties/rx_delay",
                  "default": 11.0
                },
                "tx_dbm": {
                  "$ref": "#/properties/cpri_link/properties/tx_dbm",
                  "default": 42.0
                }
              }
            }
          }
        }
      }
    }
  }
}
