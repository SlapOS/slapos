  "$schema": "https://json-schema.org/draft/2020-12/schema",

ru_type: string                   hidden
ru_link_type: string  sdr|cpri    hidden

n_antenna_dl  int
n_antenna_ul  int

if ru_link_type = "cpri":
  cpri_link:
    sdr_dev   number  # e.g. sdrX@Y
    sfp_port  number

    mult:        int
    mapping:     standard|hw|spread|bf1    <- selected by ru model ?
    rx_delay:    int			      <- selected by ru model
    tx_delay:    int			      <- ? selected by ru or not ?
    tx_dbm:      float
