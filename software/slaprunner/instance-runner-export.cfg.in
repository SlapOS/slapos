  sshkeys-authority
  publish-connection-informations
  slaprunner-promise
  slaprunner-frontend-promise
  dropbear-promise
  runtestsuite
  shellinabox-promise
  symlinks
  shellinabox
  slapos-cfg
  slapos-repo-config
